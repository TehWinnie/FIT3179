{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Cancer Death Rates by Age",
  "width": 800,
  "height": 600,
  "projection": {"type": "equalEarth"},
  "data": {
    "url": "JSON/worldmap.json",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "layer": [
    {
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "path/to/your/aggregated_data_for_under_5.csv",
              "format": {"type": "csv"}
            },
            "key": "Entity",
            "fields": [
              "Deaths - Neoplasms - Sex: Both - Age: Under 5 (Rate)",
              "Deaths - Neoplasms - Sex: Both - Age: 5-14 years (Rate)",
              "Deaths - Neoplasms - Sex: Both - Age: 15-49 years (Rate)",
              "Deaths - Neoplasms - Sex: Both - Age: 50-69 years (Rate)",
              "Deaths - Neoplasms - Sex: Both - Age: 70+ years (Rate)"
            ]
          },
          "as": ["Under 5", "5-14 years", "15-49 years", "50-69 years", "70+ years"]
        },
        {
          "calculate": "datum.Under 5 + datum['5-14 years'] + datum['15-49 years'] + datum['50-69 years'] + datum['70+ years']",
          "as": "TotalDeaths"
        }
      ],
      "mark": {"type": "geoshape", "stroke": "black", "strokeWidth": 0.5},
      "encoding": {
        "color": {
          "field": "TotalDeaths",
          "type": "quantitative",
          "title": "Total Death Rate"
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {"field": "TotalDeaths", "type": "quantitative", "title": "Total Death Rate"}
        ]
      }
    }
  ]
}
